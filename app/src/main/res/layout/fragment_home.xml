<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp">
            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:contentPadding="15dp"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtNameHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ni Putu Mira Novita Dewi"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtEmailHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="miranovitad@gmail.com"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtPhoneHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="082146452927"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnEdit"
                        android:background="@drawable/rounded_button_home"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="7dp"
                        android:textStyle="bold"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/btnLogout"
                        android:background="@drawable/rounded_button_home"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:text="#KabarTerbaru"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#2d3436"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kabar terbaru perkembangan Covid-19 di Indonesia"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#636e72"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#e2d2f6"
                android:layout_weight="1"
                app:contentPaddingTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Meninggal"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        android:textColor="#2d3436"/>
                    <TextView
                        android:id="@+id/txtDataMeninggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        android:textColor="#231352"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#e2d2f6"
                android:layout_weight="1"
                app:contentPaddingTop="8dp"
                android:layout_marginLeft="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Positif"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        android:textColor="#2d3436"/>
                    <TextView
                        android:id="@+id/txtDataPositif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        android:textColor="#231352"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#e2d2f6"
                android:layout_weight="1"
                app:contentPaddingTop="8dp"
                android:layout_marginLeft="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sembuh"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        android:textColor="#2d3436"/>
                    <TextView
                        android:id="@+id/txtDataSembuh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        android:textColor="#231352"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#e2d2f6"
                android:layout_weight="1"
                app:contentPaddingTop="8dp"
                android:layout_marginLeft="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dirawat"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        android:textColor="#2d3436"/>
                    <TextView
                        android:id="@+id/txtDataDirawat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        android:textColor="#231352"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>