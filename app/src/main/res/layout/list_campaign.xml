<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_campaign"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_weight="1"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp"
        app:contentPaddingTop="10dp"
        app:contentPaddingBottom="10dp"
        android:layout_marginBottom="7dp"
        app:strokeColor="#000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/imgViewCampaign"
                    android:src="@drawable/ic_launcher_background"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">
                <TextView
                    android:textColor="#231352"
                    android:text="Name"
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
                <TextView
                    android:textColor="#7f8c8d"
                    android:text="Name"
                    android:id="@+id/txtDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"/>
                <TextView
                    android:textColor="#231352"
                    android:text="Name"
                    android:id="@+id/txtNamaUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:id="@+id/txtEndDate"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:background="@drawable/btn_positif"
                        android:text="Positif : 11122"
                        android:textAllCaps="false"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_weight="1"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtTarget"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:background="@drawable/btn_negatif"
                        android:text="Positif : 11122"
                        android:textAllCaps="false"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="#ffffff"
                        android:text="Name"
                        android:id="@+id/txtBankAcc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="1sp"/>
                    <TextView
                        android:textColor="#ffffff"
                        android:text="Name"
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="1sp"/>
                    <TextView
                        android:textColor="#ffffff"
                        android:text="Name"
                        android:id="@+id/txtBankNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="1sp"/>
                    <TextView
                        android:textColor="#ffffff"
                        android:text="Name"
                        android:id="@+id/txtStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="1sp"/>
                    <TextView
                        android:textColor="#ffffff"
                        android:text="Name"
                        android:id="@+id/txtInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="1sp"/>
                    <TextView
                        android:textColor="#ffffff"
                        android:text="Name"
                        android:id="@+id/txtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="1sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>